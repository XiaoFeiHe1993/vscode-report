{
  "name": "daily-report",
  "displayName": "日报、周报提醒",
  "description": "日报、周报提醒插件。Daily and Weekly reminder plugin",
  "version": "1.0.0",
  "publisher": "xiaofeihe",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "日报",
    "周报",
    "report",
    "newspaper"
  ],
  "bugs": {
    "url": "https://github.com/formulahendry/vscode-ycy/issues",
    "email": "1712776213@qq.com"
  },
  "homepage": "https://github.com/formulahendry/vscode-ycy/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/formulahendry/vscode-ycy.git"
  },
  "activationEvents": [
    "onCommand:report.showReminderView",
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "report.showReminderView",
        "title": "打开周报提醒",
        "category": "report"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "周报",
      "properties": {
        "report.title": {
          "type": "string",
          "default": "该写周报啦~",
          "description": "页面内展示文字"
        },
        "report.type": {
          "type": "string",
          "default": "default",
          "description": "类型：default:默认图；url：网络图"
        },
        "report.customImages": {
          "type": "array",
          "default": [
            "http://b-ssl.duitang.com/uploads/item/201806/04/20180604090459_gqqjo.jpg"
          ],
          "description": "用户设置图片地址"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.7.4",
    "vscode": "^1.1.36",
    "tslint": "^5.20.1",
    "@types/node": "^13.1.4",
    "@types/mocha": "^5.2.7"
  }
}
